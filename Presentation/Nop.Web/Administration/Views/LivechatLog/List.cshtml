            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="brands-grid"></div>

                    <script>
                        $(document).ready(function() {
                            $("#brands-grid").kendoGrid({
                                dataSource: {
                                    type: "json",
                                    transport: {
                                        read: {
                                            url: "@Html.Raw(Url.Action("List", "LivechatLog"))",
                                            type: "POST",
                                            dataType: "json",
                                            data: additionalData
                                        }
                                    },
                                    schema: {
                                        data: "Data",
                                        total: "Total",
                                        errors: "Errors"
                                    },
                                    error: function(e) {
                                        display_kendoui_grid_error(e);
                                        // Cancel the changes
                                        this.cancelChanges();
                                    },
                                    pageSize: @(defaultGridPageSize),
                                    serverPaging: true,
                                    serverFiltering: true,
                                    serverSorting: true
                                },
                                pageable: {
                                    refresh: true,
                                    pageSizes: [@(gridPageSizes)],
                                    @Html.Partial("_GridPagerMessages")
                                },
                                scrollable: false,
                                columns: [{
                                    field: "AgentName",
                                    title: "@T("Moveleiros.Admin.Livechat.Log.Fields.AgentName")"
                                }, {
                                    field: "CustomerName",
                                    title: "@T("Moveleiros.Admin.Livechat.Log.Fields.CustomerName")"
                                }, {
                                    field: "CreatedAtFormated",
                                    title: "@T("Moveleiros.Admin.Livechat.Log.Fields.CreatedAtFormated")",
                                }, {
                                    field: "MessagesCount",
                                    title: "@T("Moveleiros.Admin.Livechat.Log.Fields.MessagesCount")",
                                }, {
                                    field: "IsFinished",
                                    title: "@T("Moveleiros.Admin.Livechat.Log.Fields.IsFinished")",
                                    width: 100,
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },
                                    template: '# if(IsFinished) {# <i class="fa fa-check true-icon"></i> #} else {# <i class="fa fa-close false-icon"></i> #} #'
                                }, {
                                    field: "ChannelId",
                                    title: "@T("Admin.Common.Show")",
                                    width: 100,
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },
                                    template: '# if (ChannelId.length === 0) {# #} else {# <a class="btn btn-default" href="Show/#=ChannelId#"><i class="fa fa-pencil"></i>@T("Admin.Common.Show")</a> #} #'                                }
                                ]
                            });
                        });
                    </script>

